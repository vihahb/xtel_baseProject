<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/size_36"
    android:layout_marginRight="@dimen/size_36"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_24"
        android:layout_marginRight="@dimen/size_24"
        android:layout_marginTop="@dimen/size_24"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/dialog_txt_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_24"
        android:textColor="#757575" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_8"
        android:gravity="right|end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_btn_negative"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_36"
            android:layout_marginRight="@dimen/size_8"
            android:background="@drawable/button_transparent"
            android:minWidth="@dimen/size_64"
            android:paddingLeft="@dimen/size_8"
            android:paddingRight="@dimen/size_8"
            android:textColor="#2196F3" />

        <Button
            android:id="@+id/dialog_btn_positive"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_36"
            android:background="@drawable/button_transparent"
            android:minWidth="@dimen/size_64"
            android:paddingLeft="@dimen/size_8"
            android:paddingRight="@dimen/size_8"
            android:textColor="#2196F3" />
    </LinearLayout>
</LinearLayout>